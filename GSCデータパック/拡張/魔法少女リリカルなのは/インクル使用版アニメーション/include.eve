For i = 1 To P_NUM

  Set UID[i] Partner(i - 1) 

#　ビームに関する変数

  Set C_X[i] WX(UID[i])
  Set C_Y[i] WY(UID[i])

#　手持ち武器に関する変数

  Set C_X2[i] WX(UID[i])
  Set C_Y2[i] WY(UID[i])

