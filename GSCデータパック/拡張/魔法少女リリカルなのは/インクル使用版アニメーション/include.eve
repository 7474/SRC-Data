Set C_X (_Get_WX(相手ユニットＩＤ) - 16)
Set C_Y (_Get_WY(相手ユニットＩＤ) - 32)
Set ANG 90
Set X_F _GetCircumference(ANG,Ｘ)
Set Y_F _GetCircumference(ANG,Ｙ)
